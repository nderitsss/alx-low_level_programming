#include "main.h"
#include <stdio.h>
#include <string.h>
/**
 * print_rev - reverses a string
 * @*s : a pointer
 *
 * Return Always 0
 */
void print_rev(char *s)
{
	s = (char *)s;
	 char s[1000], r[1000];

	    int begin, end, count = 0;

	       printf("Input a string:");

	          gets(s);

		     while (s[count] != '\0')

			           count++;    // Calculating string length



		        end = count - 1;

			   for (begin = 0; begin < count; begin++) {

				         r[begin] = s[end];

					       end--;
}
